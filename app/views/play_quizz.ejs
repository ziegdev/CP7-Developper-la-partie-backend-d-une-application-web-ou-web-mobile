<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4"><%= quizz.title %></h2>
    <p class="lead"><%= quizz.description %></p>
    <p class="font-weight-bold">par <%= quizz.author.getFullName() %></p>
    <p class="lead"><%= quizz.questions.length %> questions</p>
</div>

<div class="row">

    <% for (let tag of quizz.tags) { %>
    <div class="col-3 p-4 text-center">
        <a class="btn btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %>" href="/quizzes/tag/<%= tag.id %>">
            <%= tag.name %>
        </a>
    </div>
    <% } %>

</div>

<form action="/quizz/<%= quizz.id %>" method="post" class="row">

    <% for(let question of quizz.questions) { %>

    <div class="col-12">
        <label class="badge level level--<%= question.level.name.toLowerCase() %>"><%= question.level.name %></label>
        <h4>
            <%= question.question %>
        </h4>
        <ul class="list-unstyled ml-5">
            <% for(let answer of question.answers){ %>
                <li>
                    <input type="radio" name="question_<%= question.id %>" id="answer_<%= question.id %>_<%= answer.id %>" value="<%= answer.id %>">
                    <label for="answer_<%= question.id %>_<%= answer.id %>"><%= answer.description %></label>
                </li>
            <% } %>
        </ul>
    </div>


    <% } %>

    <button class="btn btn-lg btn-primary btn-block mt-5" type="submit">Valider</button>
</form>

<%- include('partials/footer') %>